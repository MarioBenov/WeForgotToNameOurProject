}

#RazdaiMe .searchContainer .searchWrapper{
	margin: 0 auto;
}

.searchInput{
	width: 400px;
	height: 30px; 
	padding: 5px;
    margin-left: 10px;
    border-radius: 5px;  
	position: relative;
}

#results {
    width: 100%; 
    height: auto; 
    bottom: 0;      
    top: 0; 
    display: inline-block;
}

#resultContent {
    height: 30px;
}
.activeModuleNameWrapper {
  max-width: 300px;
  padding: 20px;
  height: 100%;
	float: left;
}
#activeModuleName {
  display: block;
  font-weight: bold;
  padding: 10px;
  background: #eeeeee;
  border-radius: 5px;
}

#results {
  width: 100%;
  height: 100%;
  height: auto;
  bottom: 0;
  top: 0;
  display: inline-block;
}
#resultContent {
  height: 100%;
  padding: 15px;
}
.wrapper {
  margin: 5px 10px 15px 10px;
  width: 950px;
  border-radius: 5px;
  background: #878787;
  zoom: 1;
}
.wrapper:after {
  display: block;
  content: "/0020";
  height: 0;
  overflow: hidden;
}
.orgImage {
  display: inline-block;
  width: 100px;
  height: 100px;
  margin: 5px;
  background: #565656;
  border-radius: 5px;
}
.orgInfo {
  display: inline-block;
  vertical-align: top;
  position: relative;
  margin-bottom: 10px;
  width: 800px;
}
.orgName {
  padding: 5px;
  margin: 5px;
  font-size: 1.2em;
}
.orgDesc {
  margin-left: 20px;
  word-wrap: break-word;
}
.orgContact {
  display: inline-block;
  float: right;
  clear: both;
  width: 50%;
  text-align: right;
  right: 0;
}

#headerButtons
{
	position: relative;
	height: 100%;
	display: inline-block;
	width: auto;
	float: right;
}

.buttonWrapper
{
	background: red;
	width: 60px;
	height: 60px;
	margin: 20px 10px;
	display: inline-block;
}

.headerButton
{
	width: 100%;
	height: 100%;
	display: block;
	cursor:pointer;
}