html, body{
	width:100%;
	height:100%;
}

html, div, body, input{
	margin: 0;
    padding: 0;
}

body{
	margin:0;
	min-width:700px;
	overflow: hidden;
}

#mainContent{
	width: 100%;
	height: 100%;
}

#moduleBar{
	width: 140px;
	background: green;
	height: 100%;
	position: absolute;
	top: 0;
	background: #adadad;
	/* Old browsers */
	background: -moz-linear-gradient(left, #adadad 1%, #adadad 33%, #c1c1c1 79%, #c1c1c1 100%);
	/* FF3.6+ */
	background: -webkit-gradient(linear, left top, right top, color-stop(1%, #adadad), color-stop(33%, #adadad), color-stop(79%, #c1c1c1), color-stop(100%, #c1c1c1));
	/* Chrome,Safari4+ */
	background: -webkit-linear-gradient(left, #adadad 1%, #adadad 33%, #c1c1c1 79%, #c1c1c1 100%);
	/* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(left, #adadad 1%, #adadad 33%, #c1c1c1 79%, #c1c1c1 100%);
	/* Opera 11.10+ */
	background: -ms-linear-gradient(left, #adadad 1%, #adadad 33%, #c1c1c1 79%, #c1c1c1 100%);
	/* IE10+ */
	background: linear-gradient(to right, #adadad 1%, #adadad 33%, #c1c1c1 79%, #c1c1c1 100%);
	/* W3C */
	filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#adadad', endColorstr='#c1c1c1', GradientType=1);
	/* IE6-9 */
}

#header{
	height: 100px;
  margin-left: 140px;
  background: #adadad;
  /* Old browsers */
  background: -moz-linear-gradient(left, #adadad 1%, #adadad 33%, #c1c1c1 79%, #c1c1c1 100%);
  /* FF3.6+ */
  background: -webkit-gradient(linear, left top, right top, color-stop(1%, #adadad), color-stop(33%, #adadad), color-stop(79%, #c1c1c1), color-stop(100%, #c1c1c1));
  /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(left, #adadad 1%, #adadad 33%, #c1c1c1 79%, #c1c1c1 100%);
  /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(left, #adadad 1%, #adadad 33%, #c1c1c1 79%, #c1c1c1 100%);
  /* Opera 11.10+ */
  background: -ms-linear-gradient(left, #adadad 1%, #adadad 33%, #c1c1c1 79%, #c1c1c1 100%);
  /* IE10+ */
  background: linear-gradient(to right, #adadad 1%, #adadad 33%, #c1c1c1 79%, #c1c1c1 100%);
  /* W3C */
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#adadad', endColorstr='#c1c1c1', GradientType=1);
  /* IE6-9 */
}

