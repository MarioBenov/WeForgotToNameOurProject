input[type=button] {
    border: none;
    border-radius: 5px;
    padding: 5px;
    background:#ccc;
    font-family: Arial, 'DejaVu Sans', 'Liberation Sans', Freesans, sans-serif;
    color: black;
    border-bottom: 2px solid #aaa;
    border-right: 2px solid #aaa;
    margin-left: 5px;
}

input[type=button]:hover {
    background: #aaa;
}

